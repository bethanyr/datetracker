<h2><% I18n.t(:new_date) %></h2>
<%= form_for(@importantdates) do |f| %>
	<p>
	  <%= f.label I18n.t(:importantdate) %><br />
	  <%= f.date_select :importantdate %>
	</p>

	<p>
	  <%= f.label I18n.t(:name) %><br />
	  <%= f.text_field :name %>
	</p>
	<p>
	  <%= f.label I18n.t(:description) %><br />
	  <%= f.text_area :description %>
	</p>
	<%= f.submit %>
<% end %>
